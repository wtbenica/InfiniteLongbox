<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ComicCollector" parent="BaseTheme">
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text Colors -->
        <item name="textColorTitleBar">?attr/colorPrimaryDark</item>
        <item name="textColorTitle">?attr/colorPrimary</item>
        <item name="textColorSubtitle">?attr/colorPrimaryLight</item>

        <item name="colorTransparentFilter">@color/transparent_filter</item>
        <item name="colorTransparentFilterLow">@color/transparent_filter_low</item>

        <!-- Customize your theme here. -->
        <item name="colorUi">?attr/colorSecondaryDark</item>
        <item name="colorUiBackground">?attr/colorSecondaryVariant</item>

        <item name="colorChipBgActive">?attr/colorPrimaryVariant</item>
        <item name="colorChipBgInactive">?attr/colorSecondaryVariant</item>
        <item name="colorChipStrokeActive">?attr/colorOnPrimary</item>
        <item name="colorChipStrokeInactive">?attr/colorSecondary</item>
