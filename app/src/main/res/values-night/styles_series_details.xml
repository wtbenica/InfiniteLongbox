<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SeriesLayout">
        <item name="android:padding">@dimen/item_series_padding</item>
        <item name="android:background">@drawable/gd_bg_night</item>
    </style>

    <style name="SeriesTitleText" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/permanent_marker</item>
    </style>

    <style name="SeriesSubtitle" parent="TextAppearance.AppCompat.SearchResult.Subtitle">
        <item name="fontFamily">@font/permanent_marker</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>


</resources>