<resources>

    <style name="SeriesDetailBackground">
        <item name="android:background">?attr/seriesDetailBackground</item>
        <item name="android:padding">@dimen/margin_default</item>
    </style>

    <style name="SeriesDetailLabel" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">?attr/fontBlock</item>
        <item name="android:textColor">?attr/seriesDetailLabelColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SeriesDetailText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?attr/seriesDetailTextColor</item>
        <item name="android:fontFamily">?attr/fontRegular</item>
    </style>

    <style name="SeriesDetailDropdownButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:minHeight">@dimen/peek_height</item>
        <item name="android:minWidth">@dimen/peek_height</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="srcCompat">@drawable/icon_arrow_down</item>
        <item name="android:tint">?attr/seriesDetailDropdownButtonTint</item>
    </style>
</resources>