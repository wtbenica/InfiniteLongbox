<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="imageLabel">
        <item name="android:background">?attr/colorSecondary</item>
        <item name="android:layout_height">?attr/dropdownListPreferredItemHeight</item>
        <item name="android:layout_width">?attr/dropdownListPreferredItemHeight</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="tint">@android:color/white</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="mySwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/my_switch</item>
        <item name="trackTint">?attr/colorSecondary</item>
        <item name="android:paddingStart">@dimen/margin_wide</item>
        <item name="android:paddingEnd">@dimen/margin_wide</item>
        <item name="fontFamily">@font/permanent_marker</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/mySwitchTextAppearance</item>
    </style>

    <style name="mySwitchTextAppearance" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="searchAutoCompleteStyle" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:textColorHint">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:background">@android:color/white</item>
        <item name="singleLine">true</item>
        <item name="android:dropDownWidth">match_parent</item>
        <item name="android:popupBackground">?attr/colorSecondaryLightLight</item>
    </style>

    <style name="filterCardChipGroup" parent="Widget.MaterialComponents.ChipGroup">
        <item name="android:minHeight">?attr/dropdownListPreferredItemHeight</item>
        <item name="singleLine">false</item>
        <item name="android:background">@android:color/white</item>
        <item name="chipSpacingVertical">@dimen/margin_default</item>
        <item name="chipSpacingHorizontal">@dimen/margin_default</item>
        <item name="android:padding">@dimen/margin_default</item>
    </style>

    <style name="filter_section">

    </style>

    <style name="myNewChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipIconSize">20dp</item>
        <item name="closeIconSize">20dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipCornerRadius">0dp</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStartPadding">@dimen/margin_default</item>
        <item name="chipEndPadding">@dimen/margin_default</item>
        <item name="chipBackgroundColor">@color/filter_chip</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/myChipText</item>
        <item name="checkedIconTint">?attr/colorOnPrimary</item>
        <item name="closeIconTint">?attr/colorOnPrimary</item>
        <item name="checkedIcon">@drawable/ic_check_circle</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="myChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="searchTypeSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:padding">0dp</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:popupBackground">?attr/colorSecondaryLightLight</item>
    </style>

    <style name="listItemSortTypeStyle">
        <item name="paddingStart">@dimen/margin_default</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:padding">@dimen/margin_narrow</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>