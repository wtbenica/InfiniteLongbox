<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComicCollector" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fantasia</item>
        <item name="colorPrimaryVariant">@color/fantasia_light_light</item>
        <item name="colorPrimaryDark">@color/fantasia_dark</item>
        <item name="colorOnPrimary">@color/fantasia_text</item>

        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/amnesia</item>
        <item name="colorSecondaryVariant">@color/amnesia_light</item>
        <item name="colorSecondary">@color/amnesia_dark</item>
        <item name="colorOnSecondary">@color/amnesia_text</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">?attr/colorPrimary</item>
        <item name="cardViewStyle">@style/mCardView</item>
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:spinnerStyle">@style/mySpinnerStyle</item>
        <item name="android:buttonBarButtonStyle">@style/myButtonBarButtonStyle</item>
        <item name="android:buttonBarStyle">@style/myButtonBarStyle</item>
        <item name="switchStyle">@style/mySwitchStyle</item>
        <item name="chipStyle">@style/myNewChip</item>
        <item name="floatingActionButtonStyle">@style/myFabStyle</item>

        <item name="colorPrimaryMuted">@color/fantasia_muted</item>
        <item name="colorPrimaryDarkMuted">@color/fantasia_dark_muted</item>
        <item name="colorPrimaryLightMuted">@color/fantasia_light_muted</item>
    </style>

</resources>