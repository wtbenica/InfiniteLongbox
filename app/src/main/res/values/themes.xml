<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComicCollector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/granite</item>
        <item name="colorPrimaryVariant">@color/granite_light</item>
        <item name="colorPrimaryDark">@color/granite_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_dark</item>
        <item name="colorSecondaryVariant">@color/lime_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:spinnerStyle">@style/mySpinnerStyle</item>
        <item name="buttonBarButtonStyle">@style/myButtonBarButtonStyle</item>
        <item name="buttonBarStyle">@style/myButtonBarStyle</item>
        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteStyle</item>
        <!--        <item name="buttonBarButtonStyle">@style/myButtonBarButtonStyle</item>-->
        <item name="chipStyle">@style/myChip</item>

    </style>

    <style name="myButtonBarStyle" parent="Widget.AppCompat.ButtonBar">
        <item name="android:backgroundTint">@color/lime</item>
    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">

    </style>

    <style name="myButtonBarButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/blue_outline</item>
    </style>

    <style name="mySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/green_outline_grey_fill2</item>
        <item name="android:popupBackground">@drawable/green_outline_grey_fill2</item>
    </style>

    <style name="myAutoCompleteStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@drawable/green_outline_grey_fill2</item>
        <item name="android:popupBackground">@drawable/green_outline_grey_fill2</item>
    </style>


    <style name="myListItem">
        <item name="android:elevation">1dp</item>
    </style>

    <style name="myChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">?attr/colorSecondaryVariant</item>
        <item name="android:textAppearance">@style/myChipText</item>
    </style>


    <style name="myChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>