<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComicCollector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/granite</item>
        <item name="colorPrimaryVariant">@color/granite_light</item>
        <item name="colorPrimaryDark">@color/granite_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime</item>
        <item name="colorSecondaryVariant">@color/granite_light</item>
        <item name="colorOnSecondary">@color/light_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:spinnerStyle">@style/mySpinnerStyle</item>
        <item name="chipStyle">@style/myChip</item>
    </style>


    <style name="myButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>


    <style name="mySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/blue_outline</item>
        <item name="android:popupBackground">@drawable/blue_outline</item>
    </style>


    <style name="myListItem">
        <item name="android:background">@drawable/blue_outline</item>
    </style>


    <style name="myChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipStrokeColor">@color/black</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">?attr/colorSecondary</item>
        <item name="android:textAppearance">@style/myChipText</item>
        <item name="android:textColor">@color/cardview_dark_background</item>
    </style>


    <style name="myChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>