<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComicCollector" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/granite</item>
        <item name="colorPrimaryVariant">@color/granite_light</item>
        <item name="colorPrimaryDark">@color/granite_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_dark</item>
        <item name="colorSecondaryVariant">@color/lime_light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:spinnerStyle">@style/mySpinnerStyle</item>
        <item name="buttonBarButtonStyle">@style/myButtonBarButtonStyle</item>
        <item name="buttonBarStyle">@style/myButtonBarStyle</item>
        <item name="autoCompleteTextViewStyle">@style/myAutoCompleteStyle</item>
        <!--        <item name="buttonBarButtonStyle">@style/myButtonBarButtonStyle</item>-->
        <item name="chipStyle">@style/myChip</item>
    </style>
</resources>