<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ComicCollector" parent="BaseTheme" />

    <style name="BaseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/fantasia</item>
        <item name="colorPrimaryVariant">@color/fantasia_variant</item>
        <item name="colorPrimaryDark">@color/fantasia_dark</item>
        <item name="colorPrimaryTransparent">@color/fantasia_transparent</item>

        <item name="colorOnPrimary">@color/fantasia_text</item>

        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/amnesia_e7</item>

        <item name="colorSecondary">@color/amnesia_dark</item>
        <item name="colorSecondaryVariant">@color/amnesia_f4</item>
        <item name="colorSecondaryLightLight">@color/amnesia_ff</item>
        <item name="colorSecondaryTransparent">@color/amnesia_light_transparent</item>

        <item name="colorOnSecondary">@color/amnesia_text</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Text Colors -->
        <item name="textColorTitleBar">?attr/colorOnPrimary</item>
        <item name="textColorTitle">?attr/colorOnPrimary</item>
        <item name="textColorSubtitle">?attr/colorPrimaryDark</item>

        <item name="colorTransparentWhite">@color/transparent_white</item>

        <!-- Customize your theme here. -->
        <item name="colorUi">?attr/colorSecondary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>

        <item name="colorChipBgActive">?attr/colorPrimaryVariant</item>
        <item name="colorChipBgInactive">?attr/colorSecondaryVariant</item>
        <item name="colorChipFgActive">?attr/textColorSubtitle</item>
        <item name="colorChipFgInactive">?attr/colorSecondary</item>

        <item name="android:windowBackground">?attr/colorSecondaryLightLight</item>
        <item name="cardViewStyle">@style/mCardView</item>
        <item name="materialButtonStyle">@style/myButtonStyle</item>
        <item name="android:spinnerStyle">@style/IssueDetailVariantSpinnerStyle</item>
        <item name="android:buttonBarButtonStyle">@style/myButtonBarButtonStyle</item>
        <item name="android:buttonBarStyle">@style/myButtonBarStyle</item>
        <item name="switchStyle">@style/mySwitchStyle</item>
        <item name="chipStyle">@style/myNewChip</item>
        <item name="floatingActionButtonStyle">@style/myFabStyle</item>

        <item name="styleCreatorLink">@style/CreatorLink</item>
        <item name="styleIssueInfoBox">@style/IssueInfoBox</item>
        <item name="styleSeriesDetail">@style/SeriesDetailBackground</item>
        <item name="styleAddCollectionButton">@style/AddCollectionButtonStyle</item>


        <item name="listItemSeriesBackground">@drawable/free_taste</item>
    </style>
</resources>