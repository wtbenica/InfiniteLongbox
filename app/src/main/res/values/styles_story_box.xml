<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StoryBoxTitleBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
    </style>

    <style name="StoryBoxTitleBarText">
        <item name="android:textSize">18sp</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:padding">@dimen/margin_narrow</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/archivo_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StoryBoxDropdownButton" parent="Widget.AppCompat.ImageButton">
        <item name="minHeight">@dimen/peek_height</item>
        <item name="android:minWidth">36dp</item>
        <item name="srcCompat">@drawable/arrow_down_24</item>
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="StoryBoxDropdownButton.Subtitle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="StoryBoxDropdownButton.Title">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="StoryBoxSubtitleBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/margin_narrow</item>
        <item name="android:paddingBottom">@dimen/margin_narrow</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
        <item name="android:paddingStart">@dimen/margin_narrow</item>
    </style>

    <style name="StoryBoxSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:padding">@dimen/margin_narrow</item>
        <item name="android:fontFamily">@font/archivo_black</item>
    </style>

    <style name="RoleNameText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/archivo_black</item>
    </style>

    <style name="CreatorNameText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/heebo_medium</item>
    </style>

    <style name="ContentBox">
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
        <item name="android:textAppearance">@style/ContentBoxText</item>
    </style>

    <style name="ContentBoxText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/heebo_medium</item>
    </style>
</resources>