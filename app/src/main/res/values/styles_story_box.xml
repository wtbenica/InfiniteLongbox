<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StoryBoxTitleBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_narrow</item>
        <item name="android:background">@drawable/background_story_box_title_bar</item>
    </style>

    <style name="StoryBoxTitleBarText">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/margin_narrow</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/archivo_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StoryBoxDropdownButton" parent="Widget.AppCompat.ImageButton">
        <item name="minHeight">@dimen/peek_height</item>
        <item name="android:minWidth">36dp</item>
    </style>

    <style name="StoryBoxDropdownButton.Subtitle">
        <item name="android:background">@android:color/transparent</item>
        <item name="srcCompat">@drawable/arrow_up_24</item>
    </style>

    <style name="StoryBoxDropdownButton.Title">
        <item name="android:background">@android:color/transparent</item>
        <item name="srcCompat">@drawable/arrow_down_24</item>
    </style>

    <style name="StoryBoxSubtitleBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">@dimen/margin_narrow</item>
        <item name="android:background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="StoryBoxSubtitleText">
        <item name="android:background">@drawable/background_story_box_subtitle_bar</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/margin_narrow</item>
        <item name="android:fontFamily">@font/archivo_black</item>
    </style>

    <style name="CreatorLink" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/CreatorNameText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="RoleNameText" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">@dimen/margin_narrow</item>
        <item name="fontFamily">@font/archivo_black</item>
        <item name="android:background">@drawable/primary_border</item>
        <item name="android:padding">@dimen/margin_narrow</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="CreatorNameText" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/heebo_medium</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Subsection">

    </style>

    <style name="ContentBox">
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:textAppearance">@style/ContentBoxText</item>
    </style>

    <style name="ContentBoxText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">@dimen/margin_narrow</item>
        <item name="android:paddingEnd">@dimen/margin_narrow</item>
        <item name="android:fontFamily">@font/heebo_medium</item>
    </style>
</resources>