<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.ComicCollector">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="mCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardMaxElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="mFilterView" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardElevation">@dimen/margin_default</item>
    </style>

    <style name="myFabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="myActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/myActionBarText</item>
    </style>

    <style name="myActionBarText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/permanent_marker</item>
    </style>

    <style name="mySwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/my_switch</item>
        <item name="trackTint">?attr/colorSecondaryVariant</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/permanent_marker</item>
        <item name="android:textAppearance">@style/mySwitchTextAppearance</item>
    </style>

    <style name="mySwitchTextAppearance" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myButtonBarStyle" parent="Widget.AppCompat.ButtonBar">

    </style>

    <style name="myButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="myButtonBarButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/my_button_bar_button</item>
        <item name="cornerRadius">@dimen/margin_default</item>
    </style>

    <style name="mySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/background_primary_variant_24dp</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:layout_height">?attr/dropdownListPreferredItemHeight</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:popupBackground">@drawable/secondary_outline_white_background</item>
    </style>

    <style name="myAutoCompleteStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:background">@drawable/background_white_24dp</item>
        <item name="android:paddingStart">@dimen/margin_wide</item>
        <item name="fontFamily">@font/permanent_marker</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="myNewChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipStrokeColor">?attr/colorSecondary</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipIconSize">19dp</item>
        <item name="chipStartPadding">@dimen/margin_default</item>
        <item name="chipEndPadding">@dimen/margin_default</item>
        <item name="chipBackgroundColor">?attr/colorAccent</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAppearance">@style/myChipText</item>
        <item name="checkedIconTint">?attr/colorOnPrimary</item>
        <item name="chipMinHeight">32dp</item>
        <item name="closeIconTint">?attr/colorOnPrimary</item>
        <item name="checkedIcon">@drawable/ic_check_circle</item>
    </style>

    <style name="myChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="fontFamily">@font/permanent_marker</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>