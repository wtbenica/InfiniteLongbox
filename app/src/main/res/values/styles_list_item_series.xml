<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mCardView.ListItemSeries">
        <item name="cardCornerRadius">@dimen/radius_list_item_series</item>
        <item name="cardElevation">@dimen/margin_narrow</item>
        <item name="cardMaxElevation">@dimen/margin_narrow</item>
    </style>

    <style name="ListItemSeriesLayout">
        <item name="android:padding">14dp</item>
    </style>

    <style name="ListItemTitleText" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:background">@drawable/bg_series_title</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="fontFamily">@font/archivo_black</item>
    </style>

    <style name="ListItemTitleText.Series">
        <item name="android:background">@drawable/bg_series_title</item>
    </style>

    <style name="ListItemTitleText.Character">
        <item name="android:background">@drawable/bg_character_name</item>
    </style>

    <style name="ListItemMetaBox">
        <item name="android:background">@drawable/bg_series_dates</item>
    </style>

    <style name="ListItemSeriesSubtitle" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
        <item name="android:paddingTop">@dimen/margin_narrow</item>
        <item name="android:paddingBottom">@dimen/margin_narrow</item>
        <item name="android:textColor">#000</item>
        <item name="fontFamily">@font/archivo_black</item>
    </style>
</resources>