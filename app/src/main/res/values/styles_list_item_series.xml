<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mCardView.ListItemSeries">
        <item name="cardCornerRadius">@dimen/radius_list_item_series</item>
        <item name="android:layout_height">@dimen/list_item_series_card_height</item>
    </style>

    <style name="ListItemTitleText.Series">
        <item name="android:singleLine">true</item>
    </style>

    <style name="ListItemMetaBox">
        <item name="android:paddingStart">@dimen/margin_wide</item>
        <item name="android:paddingEnd">@dimen/margin_wide</item>
    </style>

    <style name="ListItemSeriesMeta" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textSize">@dimen/list_item_series_meta_text_size</item>
        <item name="android:paddingTop">@dimen/margin_narrow</item>
        <item name="android:paddingBottom">@dimen/margin_narrow</item>
        <item name="android:textColor">?attr/textColorSubtitle</item>
        <item name="android:fontFamily">?attr/fontBlock</item>
    </style>

    <style name="ListItemSeriesTitleCard">
        <item name="android:background">?attr/listItemSeriesTitleCardBackground</item>
    </style>

    <style name="ListItemSeriesProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:background">?attr/listItemSeriesProgressBarBackground</item>
        <item name="android:indeterminateTint">?attr/listItemSeriesProgressBarIndeterminateTint
        </item>
    </style>
</resources>