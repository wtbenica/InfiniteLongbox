<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mCardView.ListItemSeries">
        <item name="cardCornerRadius">@dimen/radius_list_item_series</item>
    </style>

    <style name="ListItemTitleText" parent="TextAppearance.AppCompat.Light.SearchResult.Title">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/margin_wide</item>
        <item name="android:paddingTop">@dimen/margin_narrow</item>
        <item name="android:paddingBottom">@dimen/margin_narrow</item>
        <item name="android:textColor">?attr/textColorTitle</item>
        <item name="fontFamily">@font/archivo_black</item>
    </style>

    <style name="ListItemTitleText.Series">
        <item name="android:layout_height">@dimen/radius_list_item_series</item>
    </style>

    <style name="ListItemTitleText.Simple">
        <item name="android:background">@drawable/list_item_simple_name_bg</item>
    </style>

    <style name="ListItemMetaBox">
        <item name="android:paddingStart">@dimen/margin_wide</item>
        <item name="android:paddingEnd">@dimen/margin_wide</item>
    </style>

    <style name="ListItemMetaBox.Simple">
        <item name="android:background">@drawable/bg_list_item_simple_meta</item>
    </style>

    <style name="ListItemSeriesSubtitle" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">@dimen/margin_narrow</item>
        <item name="android:paddingBottom">@dimen/margin_narrow</item>
        <item name="android:textColor">?attr/textColorSubtitle</item>
        <item name="fontFamily">@font/archivo_black</item>
    </style>

    <style name="ListItemSeriesSubtitle.Simple" />
</resources>