<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mCardView.ListItemSeries"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:animateLayoutChanges="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/alboha_bg">

        <ImageView
            android:id="@+id/series_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/description_series_list_item_background_image"
            android:cropToPadding="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/list_item_series_name_text"
            style="@style/ListItemTitleText.Series"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_wide"
            android:singleLine="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="@string/hint_series_title" />

        <LinearLayout
            android:id="@+id/metadata_box"
            style="@style/ListItemMetaBox"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/list_item_series_name_text"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/list_item_series_name_text"
            app:layout_constraintStart_toStartOf="@id/list_item_series_name_text">

            <TextView
                android:id="@+id/list_item_pub_dates"
                style="@style/ListItemSeriesSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="(1990-2005)" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_narrow"
                android:layout_marginBottom="@dimen/margin_narrow"
                android:background="@color/tag_creator"/>
            <TextView
                android:id="@+id/list_item_series_format"
                style="@style/ListItemSeriesSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="was ongoing series" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>