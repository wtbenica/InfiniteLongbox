<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/info_row_label"
        style="@style/IssueDetailInfoLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@id/info_row_text"
        android:text="@string/label_release_date"
        tools:showIn="@layout/fragment_issue_detail" />

    <TextView
        android:id="@+id/info_row_text"
        style="@style/LinkTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="May 6, 2021" />
</LinearLayout>