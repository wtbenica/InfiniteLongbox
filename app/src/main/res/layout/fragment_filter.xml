<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FilterBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_filter_fragment"
        android:clickable="true"
        android:focusable="true"
        style="@style/FilterSectionCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet">

        <LinearLayout
            android:id="@+id/layout_filter_fragment_handle"
            style="@style/HandleContainer"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <com.google.android.material.card.MaterialCardView style="@style/Handle" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_card_switches"
            style="@style/FilterSectionCard"
            app:layout_constraintBottom_toTopOf="@id/section_card_sort"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:alpha="1"
            tools:visibility="invisible">

            <LinearLayout
                style="@style/FilterSectionCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    style="@style/ImageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/sort_image_content_description"
                    android:labelFor="@id/chip_group_sort"
                    app:srcCompat="@drawable/ic_baseline_toggle_on_24" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/FilterContentCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/both_right">

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/my_collection_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:text="@string/my_collection" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_card_sort"
            style="@style/FilterSectionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/section_card_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:alpha="1F">

            <LinearLayout
                style="@style/FilterSectionCardLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/ImageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/sort_image_content_description"
                    android:labelFor="@id/chip_group_sort"
                    app:srcCompat="@drawable/ic_baseline_sort_24" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/FilterContentCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/both_right">

                    <HorizontalScrollView
                        style="@style/ChipScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.wtb.comiccollector.views.SortChipGroup
                            android:id="@+id/chip_group_sort"
                            style="@style/FilterChipGroup">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:enabled="false"
                                android:text="@string/hint_publisher"
                                app:closeIconEnabled="false" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/app_name"
                                app:closeIconEnabled="false" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hint_series_title"
                                app:closeIconEnabled="false" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/label_description"
                                app:closeIconEnabled="false" />

                        </com.wtb.comiccollector.views.SortChipGroup>
                    </HorizontalScrollView>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_card_filter"
            style="@style/FilterSectionCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/bottom_both"
            tools:alpha="1F">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_filter_card"
                style="@style/FilterSectionCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_section_card">

                <ImageView
                    android:id="@+id/image_label_filter_items"
                    style="@style/ImageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:contentDescription="@string/sort_image_content_description"
                    android:labelFor="@id/chip_group_sort"
                    app:layout_constraintBottom_toBottomOf="@id/content_card_search_auto"
                    app:layout_constraintEnd_toStartOf="@id/content_card_search_auto"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/content_card_filter_chips"
                    app:srcCompat="@drawable/ic_filter" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/content_card_filter_chips"
                    style="@style/FilterContentCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/content_card_search_auto"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/top_right">

                    <HorizontalScrollView
                        style="@style/ChipScrollView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_filter"
                            style="@style/FilterChipGroup">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doom Patrol"
                                app:closeIconEnabled="true" />

                        </com.google.android.material.chip.ChipGroup>
                    </HorizontalScrollView>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/content_card_search_auto"
                    style="@style/FilterContentCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_label_filter_items"
                    app:layout_constraintTop_toBottomOf="@id/content_card_filter_chips"
                    app:shapeAppearanceOverlay="@style/bottom_both">

                    <com.wtb.comiccollector.views.SearchAutoComplete
                        android:id="@+id/search_auto"
                        style="@style/myAutoCompleteStyle"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/dropdownListPreferredItemHeight"
                        android:hint="@string/search"
                        tools:text="Potato Latke" />
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>