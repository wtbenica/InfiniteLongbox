<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/filterBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_filter_fragment"
        style="@style/filterSectionCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/layout_filter_fragment_handle"
            style="@style/handleContainer"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView style="@style/handle" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_card_options"
            style="@style/filterSectionCard"
            app:layout_constraintBottom_toTopOf="@id/section_card_sort"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:alpha="1">

            <LinearLayout
                style="@style/filterSectionCardLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    style="@style/imageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/sort_image_content_description"
                    android:labelFor="@id/chip_group_sort"
                    app:srcCompat="@drawable/toggle_24" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/filterContentCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:shapeAppearanceOverlay="@style/both_right">

                    <com.wtb.comiccollector.views.OptionChipGroup
                        android:id="@+id/chip_group_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_card_sort"
            style="@style/filterSectionCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/section_card_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:alpha="1F">

            <LinearLayout
                style="@style/filterSectionCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    style="@style/imageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:contentDescription="@string/sort_image_content_description"
                    android:labelFor="@id/chip_group_sort"
                    app:srcCompat="@drawable/sort_24" />

                <com.google.android.material.card.MaterialCardView
                    style="@style/filterContentCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:shapeAppearanceOverlay="@style/both_right">

                    <com.wtb.comiccollector.views.SortChipGroup
                        android:id="@+id/chip_group_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checkable="true"
                            android:checked="true"
                            android:enabled="false"
                            android:text="@string/sort_type_series_name"
                            app:closeIcon="@drawable/arrow_up_24"
                            app:closeIconEnabled="true" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sort_type_release_date"
                            app:closeIcon="@drawable/arrow_up_24"
                            app:closeIconEnabled="true" />

                    </com.wtb.comiccollector.views.SortChipGroup>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/section_card_filter"
            style="@style/filterSectionCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/bottom_both"
            tools:alpha="1F">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_filter_card"
                style="@style/filterSectionCardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_section_card">

                <ImageView
                    android:id="@+id/image_label_filter_items"
                    style="@style/imageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:contentDescription="@string/sort_image_content_description"
                    android:labelFor="@id/chip_group_sort"
                    app:layout_constraintBottom_toBottomOf="@id/content_holder"
                    app:layout_constraintEnd_toStartOf="@id/content_holder"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/content_holder"
                    app:srcCompat="@drawable/ic_filter" />

                <LinearLayout
                    android:id="@+id/content_holder"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_label_filter_items">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/content_card_filter_chips"
                        style="@style/filterContentCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:shapeAppearanceOverlay="@style/top_right">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.wtb.comiccollector.views.FilterChipGroup
                                android:id="@+id/chip_group_filter"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.google.android.material.chip.Chip
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/dummy_text"
                                    app:closeIconEnabled="true" />

                            </com.wtb.comiccollector.views.FilterChipGroup>

                            <ImageButton
                                android:id="@+id/add_filter_button"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:backgroundTint="@android:color/transparent"
                                android:contentDescription="@string/content_description_add_filter_button"
                                android:src="@drawable/ic_menu_add"
                                app:tint="?attr/colorSecondary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/content_card_search_auto"
                        style="@style/filterContentCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/content_card_filter_chips"
                        app:layout_constraintTop_toBottomOf="@id/content_card_filter_chips"
                        app:shapeAppearanceOverlay="@style/bottom_both">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.wtb.comiccollector.views.SearchAutoComplete
                                android:id="@+id/search_auto"
                                style="@style/searchAutoCompleteStyle"
                                android:layout_width="0dp"
                                android:layout_height="?attr/dropdownListPreferredItemHeight"
                                android:layout_weight="1"
                                android:hint="@string/search"
                                tools:text="Potato Latke" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="?attr/colorPrimary"/>

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/search_bar_spinner"
                                tools:listitem="@layout/list_item_search_type"
                                style="@style/searchTypeSpinnerStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:entries="@array/suffixes_array"
                                android:popupBackground="@drawable/search_type_spinner_background" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>