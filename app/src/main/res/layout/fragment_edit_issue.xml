<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/issue_cover"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/description_issue_cover"
        android:src="@drawable/ic_issue_add_cover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/series_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:labelFor="@id/issue_series"
        android:text="@string/hint_series_title"
        app:layout_constraintEnd_toStartOf="@id/issue_number"
        app:layout_constraintStart_toEndOf="@id/issue_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/issue_series"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:background="@drawable/blue_outline"
        android:importantForAutofill="no"
        android:popupBackground="@drawable/blue_outline_white_background"
        app:layout_constraintEnd_toStartOf="@+id/issue_number"
        app:layout_constraintStart_toEndOf="@+id/issue_cover"
        app:layout_constraintTop_toBottomOf="@id/series_label"
        tools:listitem="@layout/support_simple_spinner_dropdown_item" />

    <EditText
        android:id="@+id/issue_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:gravity="end"
        android:hint="@string/hint_issue_number"
        android:importantForAutofill="no"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/issue_series"
        app:layout_constraintWidth_min="50dp" />

    <TextView
        android:id="@+id/release_date_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/release_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/issue_cover"
        app:layout_constraintTop_toBottomOf="@+id/issue_series" />

    <TextView
        android:id="@+id/issue_credits_box_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:labelFor="@id/issue_credits_table"
        android:text="@string/issue_credits"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/issue_cover" />

    <LinearLayout
        android:id="@+id/issue_credits_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:animateLayoutChanges="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issue_credits_box_label"
        android:orientation="horizontal" />

    <ImageButton
        android:id="@+id/gcd_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/toggle_edit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/issue_credits_table"
        app:srcCompat="@drawable/ic_issue_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>