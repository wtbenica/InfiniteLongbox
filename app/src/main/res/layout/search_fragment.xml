<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch_holder"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="end"
        android:elevation="0dp"
        android:background="@color/granite_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/my_collection_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Collection"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/results_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/granite_light"
        app:layout_constraintBottom_toTopOf="@id/chip_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_holder">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/chip_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/granite_dark"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/search_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/search_chipgroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/granite_dark"
        android:padding="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <AutoCompleteTextView
            android:id="@+id/search_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_outline_white_background"
            android:elevation="2dp"
            android:hint="@string/search"
            android:padding="16dp"
            android:textColor="@color/light_black" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/fab_description"
        android:src="@drawable/ic_filter"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/chip_holder"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
