<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_default"
    android:animateLayoutChanges="true"
    android:background="@drawable/background_story_box"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/StoryBoxTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_narrow"
            android:background="?attr/colorPrimaryDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/story_title"
            style="@style/StoryBoxTitleBarText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Cover" />

        <ImageButton
            android:id="@+id/story_dropdown_button"
            style="@style/StoryBoxDropdownButton.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimaryDark"
            android:contentDescription="@string/story_dropdown_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/story_details_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/margin_wide"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/synopsis_box"
            style="@style/Subsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/StoryBoxSubtitleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_narrow"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/label_synopsis"
                    style="@style/StoryBoxSubtitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/synopsis"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/synopsis_dropdown_button"
                    style="@style/StoryBoxDropdownButton.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/synopsis_dropdown_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/synopsis"
                style="@style/ContentBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cliff feels out of place again. Dorothy and Josh spend some time together. The group goes to therapy." />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/characters_box"
            style="@style/Subsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/StoryBoxSubtitleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_narrow"
                    android:background="?attr/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    style="@style/StoryBoxSubtitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/characters"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/characters_dropdown_button"
                    style="@style/StoryBoxDropdownButton.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/characters_dropdown_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/characters"
                style="@style/ContentBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Robotman, Crazy Jane, Rebis, Dorothy Spinner, the Chief" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>