<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:centerColor="?attr/colorSecondaryVariant"
                android:centerX="75%"
                android:centerY="18%"
                android:endColor="?attr/colorPrimaryDark"
                android:gradientRadius="80%"
                android:startColor="?attr/colorPrimaryDark"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <bitmap android:src="@drawable/bg_green"
            android:alpha=".4"
            android:tintMode="multiply"/>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:centerX="25%"
                android:centerY="60%"
                android:endColor="#44C4F462"
                android:gradientRadius="50%"
                android:startColor="#44E8FDAD"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#44C4F462"
                android:startColor="#44FFFFFF" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#44C4F462"
                android:startColor="#44FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
