<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:gravity="center_vertical|fill_horizontal">
        <shape
            android:shape="rectangle"
            android:tint="?attr/colorOnSecondary">
            <corners android:radius="@dimen/margin_wide" />
            <size android:height="@dimen/margin_default" />
            <solid android:color="?attr/colorSecondaryLight" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape
                android:shape="rectangle"
                android:tint="?attr/colorControlActivated">
                <corners android:radius="@dimen/margin_wide" />
                <size android:height="@dimen/margin_default" />
                <solid android:color="?attr/colorOnSecondary" />
            </shape>
        </scale>
    </item>
    <item
        android:id="@android:id/progress"
        android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/margin_wide" />
                <size android:height="@dimen/margin_default" />
                <gradient android:endColor="?attr/colorPrimary"
                    android:startColor="@color/fantasia_transparent"/>
                <stroke
                    android:width="1dp"
                    android:color="?attr/colorPrimary" />
            </shape>
        </scale>
    </item>
</layer-list>
