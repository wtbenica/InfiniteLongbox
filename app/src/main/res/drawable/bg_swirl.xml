<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:centerColor="@color/amnesia_variant"
                android:centerX="0.25"
                android:centerY="0.65"
                android:endColor="@color/fantasia"
                android:gradientRadius="2000"
                android:startColor="@color/fantasia_dark_dark"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <bitmap
            android:alpha=".4"
            android:src="@drawable/bg_green"
            android:tintMode="multiply" />
    </item>
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:centerX="0.50"
                android:centerY="0.25"
                android:endColor="#44C4F462"
                android:gradientRadius="1000"
                android:startColor="#44E8FDAD"
                android:type="radial" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#44C4F462"
                android:startColor="#44FFFFFF"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="#44C4F462"
                android:startColor="#44FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
